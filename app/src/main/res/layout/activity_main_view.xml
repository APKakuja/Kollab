<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainView">

    <!-- Imagen del candidato -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="249dp"
        android:layout_height="484dp"
        android:layout_centerInParent="true"
        android:background="@drawable/image_border"
        android:contentDescription="@drawable/antoniolovato"
        android:scaleType="centerCrop"
        android:src="@drawable/antoniolovato" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/kollab"
        android:contentDescription="@string/app_logo"
        android:background="@android:color/transparent" />

    <!-- Nombre del candidato -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="265dp"
        android:layout_height="30dp"
        android:layout_below="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:text="Antonio Lovato, Programador"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <!-- Botón Ver Perfil -->
    <Button
        android:id="@+id/viewProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver perfil ➡"
        android:layout_below="@id/profileName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/button_text" />

    <!-- Swipe Left (Me gusta) -->
    <ImageButton
        android:id="@+id/swipeLeftButton"
        android:layout_width="78dp"
        android:layout_height="83dp"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:alpha="0.5"
        android:background="@android:color/transparent"
        android:contentDescription="@string/swipe_left"
        android:src="@drawable/baseline_arrow_circle_left_24" />


    <TextView
        android:id="@+id/checkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/swipeLeftButton"
        android:layout_alignStart="@id/swipeLeftButton"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-2dp"
        android:text="✔"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="32sp" />

    <!-- Swipe Right (Descartar) -->

    <ImageButton
        android:id="@+id/swipeRightButton"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/baseline_arrow_circle_right_24"
        android:background="@android:color/transparent"
        android:alpha="0.5"
        android:scaleType="fitCenter"
        android:contentDescription="@string/swipe_right" />

    <TextView
        android:id="@+id/xText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/swipeRightButton"
        android:layout_alignEnd="@id/swipeRightButton"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="25dp"
        android:text="✘"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="32sp" />

</RelativeLayout>
